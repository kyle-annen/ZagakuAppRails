
<div class="container-fluid">
  <br/>
  <h1>Upcoming Zagaku's</h1>
  <br/>
  <%= month_calendar events: @events do |date, events| %>
    <%= date.day %>
    <br/>

    <% if events.length > 0 %>

    <% elsif [1,2,3,4].include? date.wday and date > DateTime.now.to_date%>
      <% event_booking_id = "request-booking-event-" + date.month.to_s + "-" + date.day.to_s + "-" + date.year.to_s%>
      <button class="btn btn-success" id=<%= event_booking_id %> >Schedule Zagaku</button>
    <% end %>
  <% end %>

</div>  