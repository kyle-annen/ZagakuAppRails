@import "calendar.scss";
@import "learning_trails.scss";
@import "simple_calendar";
@import "font-awesome";
@import url('https://fonts.googleapis.com/css?family=Monoton');

body {
  /*background: asset_path("/assets/landing-page-splash.jpg");*/
  background: url('<%= asset_path 'landing-page-splash.jpg' %>');
  background-size: cover;
  background-repeat: no-repeat;
  background-attachment: fixed;
  background-position: center;
  position: relative;
}

p, h1, h2, h3, h4, h5, h6 {
  font-family: Interface,-apple-system,BlinkMacSystemFont,sans-serif;
}

.alert {
  z-index: 50001;
  position: absolute;
  top: 100px;
}

.jumbotron {
  margin-top: 80px;
}

.page-textbox {
  background: rgba(255,255,255,0.9);
  padding: 30px 100px;
  margin-top: 180px;
}

.navbar-brand > span  {
  color: cadetblue;
  font-family: serif;
  font-size: 5rem;
  margin: -10px auto;
}

.navbar {
  background: rgb(255, 255, 255);
  z-index: 	5000;
  box-shadow: 0 0 10px #444444
}

.navbar-brand {
  padding: 0;
  color: #2E2F30;
  font-size: 3em;
}


.nav-link-color {
 color: #2E2F30;
  &:hover {
    color: #575757
  }

  &:focus {
    outline: none;
  }

  &:active {
    box-shadow: 0 4px 5px -6px lightgrey;
  }

  &:link {
  }

  &:visited {
  }
}

.z-button {
  background-color: transparent;
  border: 2px solid #2E2F30;
  border-radius: 2px;
  box-shadow: 0 8px 6px -6px lightgrey;
  &:hover {
    background-color: #f1f1f1;
  }

  &:focus {
    outline: none;
  }

  &:active {
    box-shadow: 0 4px 5px -6px lightgrey;
  }

  &:link {
  }

  &:visited {
  }
}

.topic-button {
  margin-bottom: 20px;
}

.category-title {
  margin: 150px 0 50px 0;
}

.category-link {
  margin: 0 15px;
  font-size: 20px;
}

.category-links {
  margin-top: 50px;
  margin-bottom: -50px;
  border-top: 2px solid lightgrey;
  border-bottom: 2px solid lightgrey;
  text-align: center;
}

.topic-summary {
  text-align: left;
  line-height: 30px;
}

.topic-card {
  margin-top: 20px;
}

.topic-button-complete {
  background-color: #cbcbcb;
  padding: 10px 10px;
  border-radius: 6px;
  border: 0px solid lightgrey;
}

.topic-button-incomplete {
  background-color: rgb(123, 169, 34);
  padding: 10px 10px;
  border-radius: 6px;
  border: 0px solid lightgrey;
}

.event-page-title {
  margin-top: 50px;
}

.check-mark {
  font-size: 2.5em;
  color: #009900;
  line-height: 25px;
}

.card-check-mark {
  font-size: 4em;
  margin-top: 100%;
}

.card {
  padding-bottom: 30px;
}

.current-month, th {
  background: rgba(255, 255, 255, 0.9);
}

.zagaku-carosel {
  margin-top: 50px;
}

.zagaku-quote {
  margin-top: 100px;
}

.zagaku-quote > h4 > em {
  line-height: 40px;
}
.zagaku-carosel-text {
  color: black;
}

.zagaku-crafter-image {
  filter: grayscale(70%);
}