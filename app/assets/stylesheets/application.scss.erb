@import "calendar.scss";
@import "learning_trails.scss";
@import "simple_calendar";
@import "font-awesome";
@import url('https://fonts.googleapis.com/css?family=Monoton');

body {
  /*background: asset_path("/assets/landing-page-splash.jpg");*/
background: url('<%= asset_path 'landing-page-splash.jpg' %>');
  background-size: cover;
  background-repeat: no-repeat;
  background-attachment: fixed;
  background-position: center;

}

.page-textbox {
  background: rgba(255,255,255,0.9);
  padding: 30px 100px;
  margin-top: 40px;
}

.navbar-brand > span  {
  color: cadetblue;
  font-family: serif;
  font-size: 5rem;
  margin: -10px auto;
}

.navbar {
  background-color: transparent;
}

.navbar-brand {
  padding: 0;
  color: #2E2F30;
  font-size: 3em;
}


.nav-link-color {
 color: #2E2F30;
  &:hover {
    color: #575757
  }

  &:focus {
    outline: none;
  }

  &:active {
    box-shadow: 0 4px 5px -6px lightgrey;
  }

  &:link {
  }

  &:visited {
  }
}

.z-button {
  background-color: transparent;
  border: 2px solid #2E2F30;
  border-radius: 2px;
  box-shadow: 0 8px 6px -6px lightgrey;
  &:hover {
    background-color: #f1f1f1;
  }

  &:focus {
    outline: none;
  }

  &:active {
    box-shadow: 0 4px 5px -6px lightgrey;
  }

  &:link {
  }

  &:visited {
  }
}

.topic-button {
  margin-bottom: 20px;
}

.category-title {
  margin: 150px 0 50px 0;
}

.category-link {
  margin: 0 15px;
  font-size: 20px;
}

.category-links {
  margin-top: 50px;
  margin-bottom: -50px;
  border-top: 2px solid lightgrey;
  border-bottom: 2px solid lightgrey;
  text-align: center;
}

.topic-page-summary {
  text-align: center;
}

.topic-card {
  margin-top: 20px;
}

.topic-button-complete {
  background-color: #919191;
}

.topic-button-incomplete {
  background-color: rgb(123, 169, 34);
}

