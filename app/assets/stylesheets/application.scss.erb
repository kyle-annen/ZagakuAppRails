@import "home.scss";
@import "variables.scss";
@import "events.scss";
@import "footer.scss";
@import "learning_trails.scss";
@import "simple_calendar";
@import "font-awesome";
@import url('https://fonts.googleapis.com/css?family=Monoton');

html {
}

body {
  /*background: asset_path("/assets/landing-page-splash.jpg");*/
  background: url('<%= asset_path 'landing-page-splash.jpg' %>');
  background-size: cover;
  background-repeat: no-repeat;
  background-attachment: fixed;
  background-position: center;
}

p, h1, h2, h3, h4, h5, h6 {
  font-family: Interface,-apple-system,BlinkMacSystemFont,sans-serif;
}

.alert {
  z-index: 50001;
  position: absolute;
  top: 100px;
}

.page-textbox {
  @include transparent-background;
  padding: 30px 100px;
  margin-top: 90px;
}

.navbar-brand > span  {
  color: cadetblue;
  font-family: serif;
  font-size: 5rem;
  margin: -10px auto;
}

.navbar {
  background: rgb(255, 255, 255);
  z-index:  5000;
  box-shadow: 0 0 10px #444444
}

.navbar-brand {
  padding: 0;
  color: #2E2F30;
  font-size: 3em;
}


.nav-link-color {
 color: #2E2F30;
  &:hover {
    color: #575757
  }
  &:focus {
    outline: none;
  }
  &:active {
    box-shadow: 0 4px 5px -6px lightgrey;
  }
}

.z-button {
  background-color: transparent;
  border: 2px solid #2E2F30;
  border-radius: 2px;
  box-shadow: 0 8px 6px -6px lightgrey;
  &:hover {
    background-color: #f1f1f1;
  }

  &:focus {
    outline: none;
  }

  &:active {
    box-shadow: 0 4px 5px -6px lightgrey;
  }

  &:link {
  }

  &:visited {
  }
}

.category-title {
  margin: 150px 0 50px 0;
}

.category-link {
  margin: 0 15px;
  font-size: 20px;
}

.category-links {
  margin-top: 50px;
  margin-bottom: -50px;
  border-top: 2px solid lightgrey;
  border-bottom: 2px solid lightgrey;
  text-align: left;
}

.category-topic-name {
  line-height: 5px;
  margin-bottom: 15px;
}

.category-topic-percentage {
  line-height: 16px;
  font-weight: 600;
}

.category-card {
  @include transition(.3s);
  background-color: white;
  margin-top: 50px;
  border-radius: 3px;
  &:hover {
    box-shadow: 3px 3px 10px #878787;
  }
}

.category-card-content {
  margin: 15px 20px;

}

.category-summary {
  margin-top: 15px;
}

.topic-progress {
  margin-top: 10px;
}


.topic-summary {
  text-align: left;
  line-height: 30px;
}


.topic-card {
  margin-top: 20px;
}

.topic-card-container {
  margin: 5px 5px;
  padding: 0;
}

.topic-button {
  margin-bottom: 20px;
}

.topic-button-continue {
  background-color: #7ba922;
}

.event-page-title {
  margin-top: 50px;
}

.check-mark {
  font-size: 2em;
  color: black;
}

.card-check-mark {
  font-size: 2em;
}

.card {
  padding-bottom: 30px;
}

.current-month, th {
  background: rgba(255, 255, 255, 0.9);
}
